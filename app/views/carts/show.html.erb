<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @cart %>

    <div class="mt-4">
      <%= link_to "Edit this cart", edit_cart_path(@cart), class: "rounded-lg py-2 px-2 bg-red-500 text-white inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this cart", cart_path(@cart), method: :delete, class: "rounded-lg py-2 px-2 bg-gray-200 font-medium" %>
    </div>
    <%= link_to "Back to carts", carts_path, class: "ml-2 rounded-lg py-2 px-2 bg-gray-200 inline-block font-medium" %>
    </div>
  </div>
</div>
