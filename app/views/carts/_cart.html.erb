<div id="<%= dom_id cart %>" class="p-4">
  <div class="bg-white rounded p-6">
    <h2 class="font-bold text-1xl pb-2">Your Cart</h2>
    
    <table class="table-auto">
      <%= render cart.line_items %>

      <tfoot>
        <tr>
          <th class="text-right pr-2 pt-2" colspan="3">Total:</th>
          <td class="text-right pt-2 font-bold border-t-2 border-black">
            <%= number_to_currency(cart.total_price) %> </td>
          </tr>
      </tfoot>
    </table>

    <div class="mt-4">
      <%= button_to 'Empty Cart', 
                    cart, 
                    method: :delete,
                    class:'rounded-lg py-2 px-2 text-white bg-green-600' %>
    </div> 

    <% if action_name != "show" %>
      <div class="pt-3">
        <%= link_to "Show this cart", cart, class: "rounded-lg py-1 px-1 bg-gray-200 inline-block font-medium" %>
        <%= link_to "Edit this cart", edit_cart_path(cart), class: "rounded-lg py-1 ml-2 px-1 bg-gray-200 inline-block font-medium" %>
        <hr class="mt-6">
      </div>
    <% end %>
  </div>
</div>
